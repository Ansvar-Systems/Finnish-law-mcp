        <preface>
            <p>
                <docNumber>396/2024</docNumber>
                <docTitle>Laki työttömyysturvalain muuttamisesta annetun lain eräiden säännösten kumoamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>Eduskunnan päätöksen mukaisesti säädetään:</p>
            </formula>
