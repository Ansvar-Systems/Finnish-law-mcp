        <preface>
            <p>
                <docNumber>847/2006</docNumber>
                <docTitle>Lag om ändring av 7 och 12 § i lagen om ordningsvakter</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>I enlighet med riksdagens beslut</p>
                <blockContainer>
                    <block name="substitutions">
