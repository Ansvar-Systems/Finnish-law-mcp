        <preface>
            <p>
                <docNumber>877/2005</docNumber>
                <docTitle>Laki museolain 1 ja 2 §:n muuttamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>Eduskunnan päätöksen mukaisesti</p>
                <blockContainer>
                    <block name="substitutions">
                        <i>muutetaan</i>
                         3 päivänä elokuuta 1992 annetun museolain (
                        <affectedDocument href="/akn/fi/act/statute/1992/729">729/1992</affectedDocument>
                        ) 1 ja 2 §, sellaisina kuin ne ovat, 1 § laissa 1166/1996 ja 2 § osaksi viimeksi mainitussa laissa, seuraavasti:
                    </block>
                </blockContainer>
            </formula>
