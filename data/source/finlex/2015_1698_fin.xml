        <preface>
            <p>
                <docNumber>1698/2015</docNumber>
                <docTitle>Laki liikennevahinkolautakunnasta annetun lain muuttamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>Eduskunnan päätöksen mukaisesti</p>
                <blockContainer>
                    <block name="substitutions">
                        <i>muutetaan</i>
                         liikennevahinkolautakunnasta annetun lain (
                        <affectedDocument href="/akn/fi/act/statute/2002/441">441/2002</affectedDocument>
                        ) 2 §:n 2 momentti, 5 §:n 6 momentti, 6 §:n 4 ja 5 momentti ja 13 §, sekä
                    </block>
                </blockContainer>
                <blockContainer>
                    <block name="insertions">
                        <i>lisätään</i>
                         lakiin uusi 5 a § seuraavasti:
                    </block>
                </blockContainer>
            </formula>
