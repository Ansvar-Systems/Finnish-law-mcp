        <preface>
            <p>
                <docNumber>254/2005</docNumber>
                <docTitle>Laki ympäristölupavirastoista annetun lain muuttamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>Eduskunnan päätöksen mukaisesti</p>
                <blockContainer>
                    <block name="substitutions">
                        <i>muutetaan </i>
                        ympäristölupavirastoista 4 päivänä helmikuuta 2000 annetun lain (
                        <affectedDocument href="/akn/fi/act/statute/2000/87">87/2000</affectedDocument>
                        ) 3 §:n 3 momentti ja
                    </block>
                </blockContainer>
                <blockContainer>
                    <block name="insertions">
                        <i>lisätään </i>
                        lakiin uusi 10 a § seuraavasti:
                    </block>
                </blockContainer>
            </formula>
