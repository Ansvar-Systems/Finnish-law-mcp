        <preface>
            <p>
                <docNumber>847/2006</docNumber>
                <docTitle>Laki järjestyksenvalvojista annetun lain 7 ja 12 §:n muuttamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
