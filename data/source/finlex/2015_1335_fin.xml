        <preface>
            <p>
                <docNumber>1335/2015</docNumber>
                <docTitle>Laki kuntarakennelain muuttamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>Eduskunnan päätöksen mukaisesti</p>
                <blockContainer>
                    <block name="repeals">
