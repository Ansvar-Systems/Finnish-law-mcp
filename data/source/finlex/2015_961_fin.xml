        <preface>
            <p>
                <docNumber>961/2015</docNumber>
                <docTitle>Laki auktorisoiduista kääntäjistä annetun lain 21 ja 22 §:n muuttamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>Eduskunnan päätöksen mukaisesti</p>
                <blockContainer>
                    <block name="substitutions">
                        <i>muutetaan </i>
                        auktorisoiduista kääntäjistä annetun lain (
                        <affectedDocument href="/akn/fi/act/statute/2007/1231">1231/2007</affectedDocument>
                        ) 21 ja 22 § seuraavasti:
                    </block>
                </blockContainer>
            </formula>
