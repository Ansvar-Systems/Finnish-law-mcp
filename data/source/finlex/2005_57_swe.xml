            <p>
                <docNumber>57/2005</docNumber>
                <docTitle>Lag om vissa personregister vid magistraterna</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>I enlighet med riksdagens beslut föreskrivs:</p>
            </formula>
