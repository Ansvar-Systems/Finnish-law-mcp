        <preface>
            <p>
                <docNumber>1314/2007</docNumber>
                <docTitle>Laki väestötietolain muuttamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>Eduskunnan päätöksen mukaisesti</p>
                <blockContainer>
                    <block name="substitutions">
