        <preface>
            <p>
                <docNumber>430/2007</docNumber>
                <docTitle>Laki maa- ja puutarhatalouden kansallisista tuista annetun lain 25 ja 27 §:n muuttamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>Eduskunnan päätöksen mukaisesti</p>
                <blockContainer>
                    <block name="substitutions">
                        <i>muutetaan</i>
                         maa- ja puutarhatalouden kansallisista tuista 28 päivänä joulukuuta 2001 annetun lain (
                        <affectedDocument href="/akn/fi/act/statute/2001/1559">1559/2001</affectedDocument>
                        ) 25 §:n 3 momentti ja 27 § seuraavasti:
                    </block>
                </blockContainer>
            </formula>
