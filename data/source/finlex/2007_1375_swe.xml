        <preface>
            <p>
                <docNumber>1375/2007</docNumber>
                <docTitle>Lag om ändring av kommunallagen</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>I enlighet med riksdagens beslut</p>
                <blockContainer>
                    <block name="substitutions">
