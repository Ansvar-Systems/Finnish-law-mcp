        <preface>
            <p>
                <docNumber>1610/2015</docNumber>
                <docTitle>Laki tieliikennelain muuttamisesta </docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>Eduskunnan päätöksen mukaisesti</p>
