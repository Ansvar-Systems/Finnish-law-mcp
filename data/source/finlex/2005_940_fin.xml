        <preface>
            <p>
                <docNumber>940/2005</docNumber>
                <docTitle>Laki kansaneläkelain 24 ja 42 b §:n muuttamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>Eduskunnan päätöksen mukaisesti</p>
                <blockContainer>
                    <block name="substitutions">
                        <i>muutetaan</i>
                         8 päivänä kesäkuuta 1956 annetun kansaneläkelain (
                        <affectedDocument href="/akn/fi/act/statute/1956/347">347/1956</affectedDocument>
                        ) 24 § ja 42 b §:n 1 momentti, sellaisina kuin ne ovat laissa 1023/2004, seuraavasti:
                    </block>
                </blockContainer>
            </formula>
