        <preface>
            <p>
                <docNumber>136/2006</docNumber>
                <docTitle>Laki kemikaalilain muuttamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>Eduskunnan päätöksen mukaisesti</p>
                <blockContainer>
                    <block name="substitutions">
                        <i>muutetaan</i>
                         14 päivänä elokuuta 1989 annetun kemikaalilain (
                        <affectedDocument href="/akn/fi/act/statute/1989/744">744/1989</affectedDocument>
                        ) 52 §:n 1 momentti, sellaisena kuin se on laissa 391/2005, sekä
                    </block>
                </blockContainer>
                <blockContainer>
                    <block name="insertions">
                        <i>lisätään</i>
                         lakiin uusi 8 a § seuraavasti:
                    </block>
                </blockContainer>
            </formula>
