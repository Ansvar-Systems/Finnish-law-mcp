        <preface>
            <p>
                <docNumber>1285/2007</docNumber>
                <docTitle>Laki julkisesta työvoimapalvelusta annetun lain 7 luvun 12 a §:n muuttamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>Eduskunnan päätöksen mukaisesti</p>
                <blockContainer>
                    <block name="substitutions">
