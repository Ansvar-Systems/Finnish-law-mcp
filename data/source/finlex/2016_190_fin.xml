        <preface>
            <p>
                <docNumber>190/2016</docNumber>
                <docTitle>Laki ampuma-aselain muuttamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>Eduskunnan päätöksen mukaisesti </p>
                <blockContainer>
                    <block name="substitutions">
                        <i>muutetaan</i>
                         ampuma-aselain (
                        <affectedDocument href="/akn/fi/act/statute/1998/1">1/1998</affectedDocument>
                        ) 112, 112 a, 112 b ja 115 §,
                    </block>
                    <block name="substitutions-originals">sellaisina kuin ne ovat, 112 ja 112 a § laissa 601/2001, 112 b § laissa 124/2011 ja 115 § laissa 508/2009, seuraavasti:</block>
                </blockContainer>
            </formula>
