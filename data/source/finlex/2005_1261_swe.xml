        <preface>
            <p>
                <docNumber>1261/2005</docNumber>
                <docTitle>Lag om ändring av lagen om yrkesutbildade personer inom hälso- och sjukvården</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
