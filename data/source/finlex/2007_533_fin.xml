        <preface>
            <p>
                <docNumber>533/2007</docNumber>
                <docTitle>Laki järjestyslain muuttamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>Eduskunnan päätöksen mukaisesti</p>
                <blockContainer>
                    <block name="repeals">
                        <i>kumotaan</i>
                         27 päivänä kesäkuuta 2003 annetun järjestyslain (
                        <affectedDocument href="/akn/fi/act/statute/2003/612">612/2003</affectedDocument>
                        ) 18 § sekä
                    </block>
                </blockContainer>
                <blockContainer>
                    <block name="substitutions">
                        <i>muutetaan</i>
                         17, 19 ja 21 §, sellaisena kuin niistä on 21 § laissa 582/2005, seuraavasti:
                    </block>
                </blockContainer>
            </formula>
