        <preface>
            <p>
                <docNumber>731/2015</docNumber>
                <docTitle>Laki rikoslain 2 a luvun muuttamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>Eduskunnan päätöksen mukaisesti</p>
