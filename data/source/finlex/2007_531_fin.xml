        <preface>
            <p>
                <docNumber>531/2007</docNumber>
                <docTitle>Laki rikoslain muuttamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>Eduskunnan päätöksen mukaisesti</p>
