        <preface>
            <p>
                <docNumber>88/2016</docNumber>
                <docTitle>Laki vammaisetuuksista annetun lain 9 ja 33 §:n muuttamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>Eduskunnan päätöksen mukaisesti</p>
