        <preface>
            <p>
                <docNumber>733/2024</docNumber>
                <docTitle>Laki kansaneläkelain muuttamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>Eduskunnan päätöksen mukaisesti</p>
                <blockContainer>
                    <block name="substitutions">
                        <i>muutetaan</i>
                         kansaneläkelain (
                        <affectedDocument href="/akn/fi/act/statute/2007/568">568/2007</affectedDocument>
                        ) 9 §:n 2 momentti, 12 §:n 1 momentti, 15 §:n 1 ja 3 momentti, 16 §:n 2 momentti, 57 §:n 3 momentti, 58 §:n 4 momentti ja 73 §:n 3 momentin 1 kohta,
                    </block>
                    <block name="substitutions-originals">sellaisina kuin niistä ovat 9 §:n 2 momentti ja 73 §:n 3 momentin 1 kohta laissa 1223/2009, 12 §:n 1 momentti laissa 84/2016 ja 58 §:n 4 momentti laissa 1011/2021 seuraavasti:</block>
                </blockContainer>
