        <preface>
            <p>
                <docNumber>1375/2007</docNumber>
                <docTitle>Laki kuntalain muuttamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>Eduskunnan päätöksen mukaisesti</p>
