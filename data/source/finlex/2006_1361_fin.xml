        <preface>
            <p>
                <docNumber>1361/2006</docNumber>
                <docTitle>Laki merimieslain 4 ja 77 §:n muuttamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>Eduskunnan päätöksen mukaisesti</p>
                <blockContainer>
                    <block name="substitutions">
                        <i>muutetaan</i>
                         7 päivänä kesäkuuta 1978 annetun merimieslain (
                        <affectedDocument href="/akn/fi/act/statute/1978/423">423/1978</affectedDocument>
                        ) 4 § sekä
                    </block>
                </blockContainer>
                <blockContainer>
                    <block name="insertions">
                        <i>lisätään</i>
                         77 §:ään uusi 3 momentti seuraavasti:
                    </block>
                </blockContainer>
            </formula>
