        <preface>
            <p>
                <docNumber>909/2006</docNumber>
                <docTitle>Laki yritys- ja yhteisötietolain muuttamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>Eduskunnan päätöksen mukaisesti</p>
                <blockContainer>
                    <block name="substitutions">
                        <i>muutetaan</i>
                         16 päivänä maaliskuuta 2001 annetun yritys- ja yhteisötietolain (
                        <affectedDocument href="/akn/fi/act/statute/2001/244">244/2001</affectedDocument>
                        ) 3 §:n 1 momentin 4 kohta, 7 §:n 6 momentti ja 14 §:n 1 momentin 9 kohta ja 2 momentti,
                    </block>
                    <block name="substitutions-originals">sellaisina kuin ne ovat, 3 §:n 1 momentin 4 kohta, 7 §:n 6 momentti ja 14 §:n 1 momentin 9 kohta laissa 745/2004 sekä 14 §:n 2 momentti laissa 789/2004, seuraavasti:</block>
                </blockContainer>
            </formula>
