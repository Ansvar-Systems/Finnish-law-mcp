        <preface>
            <p>
                <docNumber>1378/2007</docNumber>
                <docTitle>Laki opetus- ja kulttuuritoimen rahoituksesta annetun lain 9 ja 28 §:n muuttamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
