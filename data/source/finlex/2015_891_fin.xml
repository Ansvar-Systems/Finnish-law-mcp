        <preface>
            <p>
                <docNumber>891/2015</docNumber>
                <docTitle>Laki hallintolainkäyttölain muuttamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>Eduskunnan päätöksen mukaisesti</p>
                <blockContainer>
                    <block name="substitutions">
                        <i>muutetaan</i>
                         hallintolainkäyttölain (
                        <affectedDocument href="/akn/fi/act/statute/1996/586">586/1996</affectedDocument>
                        ) 7, 13, 31 ja 79 §, sellaisina kuin niistä ovat 7 § osaksi laissa 433/1999 sekä 13 ja 79 § osaksi laissa 698/2005, ja
                    </block>
                </blockContainer>
                <blockContainer>
                    <block name="insertions">
                        <i>lisätään</i>
                         lakiin uusi 64 a § seuraavasti:
                    </block>
                </blockContainer>
            </formula>
