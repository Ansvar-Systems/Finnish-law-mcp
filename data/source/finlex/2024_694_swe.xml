        <preface>
            <p>
                <docNumber>694/2024</docNumber>
                <docTitle>Lag om avgiftsprocentsatsen för sjukförsäkringsavgifter 2025</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>I enlighet med riksdagens beslut föreskrivs:</p>
            </formula>
