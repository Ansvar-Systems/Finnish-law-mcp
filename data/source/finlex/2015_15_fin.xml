        <preface>
            <p>
                <docNumber>15/2015</docNumber>
                <docTitle>Laki lapsen elatuksesta annetun lain muuttamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>Eduskunnan päätöksen mukaisesti</p>
                <blockContainer>
                    <block name="substitutions">
                        <i>muutetaan</i>
                         lapsen elatuksesta annetun lain (
                        <affectedDocument href="/akn/fi/act/statute/1975/704">704/1975</affectedDocument>
                        ) 13 §:n 2 momentti ja 17 §:n 2 momentti sekä
                    </block>
                </blockContainer>
                <blockContainer>
                    <block name="insertions">
                        <i>lisätään</i>
