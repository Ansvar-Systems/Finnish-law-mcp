        <preface>
            <p>
                <docNumber>228/2016</docNumber>
                <docTitle>Laki metsätuhojen torjunnasta annetun lain muuttamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>Eduskunnan päätöksen mukaisesti</p>
                <blockContainer>
                    <block name="substitutions">
                        <i>muutetaan</i>
                         metsätuhojen torjunnasta annetun lain (<affectedDocument href="/akn/fi/act/statute/2013/1087">1087/2013</affectedDocument>) 14 §:n 2 momentti, 18 §:n 1 momentti, 24 §:n 1 momentti ja 25 § sekä
                    </block>
                </blockContainer>
                <blockContainer>
                    <block name="insertions">
                        <i>lisätään</i>
                         lakiin uusi 8 a § seuraavasti:
                    </block>
                </blockContainer>
            </formula>
