            <p>
                <docNumber>223/2007</docNumber>
                <docTitle>Laki julkisen hallinnon yhteispalvelusta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>Eduskunnan päätöksen mukaisesti säädetään:</p>
