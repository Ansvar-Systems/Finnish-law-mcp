        <preface>
            <p>
                <docNumber>27/2006</docNumber>
                <docTitle>Lag om ändring av lagen om förarexamensverksamhet</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>I enlighet med riksdagens beslut</p>
