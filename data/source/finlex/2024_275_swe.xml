        <preface>
            <p>
                <docNumber>275/2024</docNumber>
                <docTitle>Lag om upphävande av lagen om alterneringsledighet</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>I enlighet med riksdagens beslut föreskrivs:</p>
            </formula>
