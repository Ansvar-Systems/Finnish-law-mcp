        <preface>
            <p>
                <docNumber>822/2005</docNumber>
                <docTitle>Laki rikoslain 49 luvun muuttamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>Eduskunnan päätöksen mukaisesti</p>
                <blockContainer>
                    <block name="substitutions">
                        <i>muutetaan</i>
                         19 päivänä joulukuuta 1889 annetun rikoslain (
                        <affectedDocument href="/akn/fi/act/statute/1889/39">39/1889</affectedDocument>
                        ) 49 luvun 1 ja 3 §,
                    </block>
                    <block name="substitutions-originals">sellaisina kuin ne ovat, 1 § laeissa 1010/1995 ja 251/1998 ja 3 § laissa 578/1995, sekä</block>
                </blockContainer>
                <blockContainer>
