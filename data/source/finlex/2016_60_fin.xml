        <preface>
            <p>
                <docNumber>60/2016</docNumber>
                <docTitle>Laki Finanssivalvonnasta annetun lain muuttamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>Eduskunnan päätöksen mukaisesti</p>
                <blockContainer>
                    <block name="substitutions">
                        <i>muutetaan</i>
                         Finanssivalvonnasta annetun lain (<affectedDocument href="/akn/fi/act/statute/2008/878">878/2008</affectedDocument>) 40 §:n 2 momentti ja 6 luvun otsikko, sellaisena kuin niistä on 40 §:n 2 momentti laissa 254/2013, sekä
                    </block>
                </blockContainer>
                <blockContainer>
                    <block name="insertions">
                        <i>lisätään</i>
                         lakiin uusi 50 g § seuraavasti: 
                    </block>
                </blockContainer>
            </formula>
