        <preface>
            <p>
                <docNumber>522/2005</docNumber>
                <docTitle>Laki puolustusvoimien virka-avusta poliisille annetun lain muuttamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
