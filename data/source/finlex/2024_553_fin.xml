        <preface>
            <p>
                <docNumber>553/2024</docNumber>
                <docTitle>Laki kaupanvahvistajista annetun lain muuttamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>Eduskunnan päätöksen mukaisesti </p>
                <blockContainer>
                    <block name="substitutions">
