        <preface>
            <p>
                <docNumber>59/2016</docNumber>
                <docTitle>Laki maksupalvelulain muuttamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>Eduskunnan päätöksen mukaisesti</p>
                <blockContainer>
                    <block name="substitutions">
