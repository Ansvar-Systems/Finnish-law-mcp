        <preface>
            <p>
                <docNumber>308/2015</docNumber>
                <docTitle>Laki eläkesäätiölain muuttamisesta</docTitle>
            </p>
        </preface>
        <preamble>
            <formula name="enactingClause">
                <p>Eduskunnan päätöksen mukaisesti</p>
                <blockContainer>
                    <block name="substitutions">
                        <i>muutetaan</i>
                         eläkesäätiölain (<affectedDocument href="/akn/fi/act/statute/1995/1774">1774/1995</affectedDocument>) 48 e ja 48 g §, sellaisina kuin ne ovat, 48 e § laissa 174/2009 ja 48 g § laissa 443/2012, sekä
                    </block>
                </blockContainer>
                <blockContainer>
                    <block name="insertions">
                        <i>lisätään</i>
                         lakiin uusi 48 h § seuraavasti:
                    </block>
                </blockContainer>
            </formula>
